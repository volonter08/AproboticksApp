<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF613B"
    android:paddingHorizontal="50dp"
    android:paddingVertical="80dp"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:contentPadding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-black"
                android:text="Доступные действия"
                android:textSize="30sp" />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Принять МЦ"
                android:backgroundTint="@color/blue_secondary"
                android:textColor="@color/white"
                app:icon="@drawable/baseline_add_24"
                app:iconTint="@color/white" />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/green"
                android:text="Снять со склада МЦ"
                android:textColor="@color/white"
                app:icon="@drawable/baseline_remove_24"
                app:iconTint="@color/black" />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/green"
                android:text="Переместить МЦ"
                android:textColor="@color/white"
                app:icon="@drawable/baseline_arrow_right_alt_24"
                app:iconTint="@color/black" />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Контроль качества"
                android:textColor="@color/black"
                app:icon="@drawable/eval_icon"
                app:iconTint="@color/black" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>